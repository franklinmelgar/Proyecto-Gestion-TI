@model Proyecto_Gestion_TI.Models.Usuario
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";    
}

<div class="login_form">
    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
    {
        <form >
            <fieldset>
                <div class="field">
                    <label class="label_field">Correo</label>
                    @Html.TextBoxFor(m => m.CorreoElectronico, new{placeholder="Correo Electronico", type="email"})
                </div>
                <div class="field">
                    <label class="label_field">Contrasena</label>
                    @Html.TextBoxFor(m => m.ContrasenaUsuario, new{placeholder="Contrasena", type="password"})
                </div>
                <div class="field margin_0">
                    <label class="label_field hidden">hidden label</label>
                    <button class="main_bt" asp-area="" asp-controller="Login" asp-action="Index">Iniciar Sesion</button>
                </div>
            </fieldset>
        </form>
    }
</div>
