@model IEnumerable<Proyecto_Gestion_TI.Models.SolicitudVacacione>
@{
    ViewBag.Titulo = "Mis Solicitudes de vacaciones";
}

<div class="row">

    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <a class="btn btn-primary btn-small" asp-area="" asp-controller="SolicitudVacaciones" asp-action="Create">
                    <i class="fa fa-plus"></i> <span>Crear nueva Solicitud</span>
                </a>
            </div>
            <div class="full price_table padding_infor_info">
                <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive-sm">
                        <table class="table table-striped projects">
                            <thead class="thead-dark">
                                <tr>
                                    <th style="width: 2%">No</th>
                                    <th style="width: 30%">Fecha Inicio</th>
                                    <th>Fecha Final</th>
                                    <th>Cantidad de dias</th>
                                    <th>Acciones</th>
                                    @*<th>Estado</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.CodigoSolicitud</td>
                                            @*<td>
                                                <a asp-action="Detail" asp-controller="ComentariosConsulta" asp-route-id="@item.CodigoConsulta">@item.TituloConsulta</a>
                                            </td>*@
                                            <td>
                                                @Convert.ToDateTime(item.FechaInicial).ToShortDateString()
                                            </td>
                                            <td>
                                                @Convert.ToDateTime(item.FechaFinal).ToShortDateString()
                                            </td>
                                            
                                            <td>
                                                @item.CantidadDias
                                            </td>

                                            <td>
                                                <a class="btn btn-info btn-xs" asp-action="Detail" asp-controller="SolicitudVacaciones" asp-route-id="@item.CodigoSolicitud">
                                                    <i class="fa fa-eye white_color2"></i> 
                                                </a>
                                            </td>                                           



                                            @*<td>
                                                @if(item.EstadoConsulta.Equals(1))
                                                {
                                                    <button type="button" class="btn btn-success btn-xs">Abierto</button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-danger btn-xs">Cerrado</button>
                                                }                                                
                                            </td>*@
                                        </tr>                                        
                                    }                           
                            </tbody>
                        </table>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>

</div>