@model Proyecto_Gestion_TI.Models.RutaAprobacion
@{
    ViewBag.Titulo = "Crear Empleado";
    List<SelectListItem> puestos = (List<SelectListItem>)ViewBag.puesto;
    List<SelectListItem> departamentosDeLaEmpresa = (List<SelectListItem>)ViewBag.departamento;
    List<SelectListItem> tiposDeUsuario = (List<SelectListItem>)ViewBag.tipoDeUsuario;
    List<SelectListItem> jefesEmpleados = (List<SelectListItem>)ViewBag.jefesDeEmpleados;
}

<div class="row">

	<div class="col-md-4">

        @if (@ViewBag.Mensaje != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @ViewBag.Mensaje
            </div>
        }        

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
 
                <label asp-for="CodigoAprobador" class="control-label"></label>
                <input asp-for="CodigoAprobador" class="form-control" />
                <span asp-validation-for="CodigoAprobador" class="text-danger"></span>

                <label asp-for="CodigoDepartamento" class="control-label"></label>
                <input asp-for="CodigoDepartamento" class="form-control" />
                <span asp-validation-for="CodigoDepartamento" class="text-danger"></span>

                <label asp-for="NivelAprobacion" class="control-label"></label>
                <input asp-for="NivelAprobacion" class="form-control" />
                <span asp-validation-for="NivelAprobacion" class="text-danger"></span>   


            </div>
            <div class="form-group">
                <input type="submit" value="Crear Ruta de Aprobacion" class="btn btn-primary" />
                <a class="btn btn-info btn-small" asp-area="" asp-controller="RutaAprobacion" asp-action="Index">
                     <span>Regresar</span>
                </a>
            </div>
        </form>
    </div>



</div>
