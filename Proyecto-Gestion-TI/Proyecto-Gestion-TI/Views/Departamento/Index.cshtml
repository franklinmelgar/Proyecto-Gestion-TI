@model IEnumerable<Proyecto_Gestion_TI.Models.Departamento>
@{
    ViewBag.Titulo = "Mantenimiento Departamentos";
}


<div class="row margin_bottom_15" > 
    <div class="col-md-12">
        <a class="btn btn-primary btn-small" asp-area="" asp-controller="Departamento" asp-action="Create">
            <i class="fa fa-plus"></i> <span>Crear nuevo Departamento</span>
        </a>
    </div>
           
</div>

<div class="row">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                <h2>Listado de Departamentos</h2>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <div class="table-responsive-sm">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Codigo</th>
                            <th>Descripcion</th>
                            <th>Acciones </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.CodigoDepartamento)</td>
                                <td>@Html.DisplayFor(modelItem => item.NombreDepartamento)</td>
                                <td>

                                    <a class="btn btn-success btn-xs" asp-action="Edit" asp-controller="Departamento" asp-route-id="@item.CodigoDepartamento">
                                        <i class="fa fa-pencil white_color2"></i> 
                                    </a>

                                    <a class="btn btn-danger btn-xs" asp-action="Delete" asp-controller="Departamento" asp-route-id="@item.CodigoDepartamento">
                                        <i class="fa fa-trash white_color2" ></i> 
                                    </a>
                                                              
                                </td>
                            </tr>   
                        }
                        
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    </div>

</div>

