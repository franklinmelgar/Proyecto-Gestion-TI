@model Proyecto_Gestion_TI.Models.Empleado

@{
    ViewBag.Titulo = "Modificar Empleado";
}

<div class="row">

	<div class="col-md-4">

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodigoEmpleado" />
            <input type="hidden" asp-for="Contrasena" />
            <div class="form-group">
                <label asp-for="NombreEmpleado" class="control-label"></label>
                <input asp-for="NombreEmpleado" class="form-control" />
                <span asp-validation-for="NombreEmpleado" class="text-danger"></span>

                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>

                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>

                <label asp-for="Dni" class="control-label"></label>
                <input asp-for="Dni" class="form-control" />
                <span asp-validation-for="Dni" class="text-danger"></span>

                <label asp-for="CodigoPuesto" class="control-label"></label>
                <input asp-for="CodigoPuesto" class="form-control" />
                <span asp-validation-for="CodigoPuesto" class="text-danger"></span>

                <label asp-for="FechaIngreso" class="control-label"></label>
                <input asp-for="FechaIngreso" class="form-control" />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>


            </div>
            <div class="form-group">
                <input type="submit" value="Modificar Empleado" class="btn btn-primary" />
                <a class="btn btn-info btn-small" asp-area="" asp-controller="Empleados" asp-action="Index">
                     <span>Regresar</span>
                </a>
            </div>
        </form>
    </div>



</div>
