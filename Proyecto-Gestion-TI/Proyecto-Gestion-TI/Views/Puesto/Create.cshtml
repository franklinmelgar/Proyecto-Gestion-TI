@model Proyecto_Gestion_TI.Models.Puesto
@{
	ViewBag.Titulo = "Crear nuevo puesto";
}

<div class="row">

	<div class="col-md-4">

        @if (@ViewBag.Mensaje != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @ViewBag.Mensaje
            </div>
        }        

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombrePuesto" class="control-label"></label>
                <input asp-for="NombrePuesto" class="form-control" />
                <span asp-validation-for="NombrePuesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear Puesto" class="btn btn-primary" />
                <a class="btn btn-info btn-small" asp-area="" asp-controller="Puesto" asp-action="Index">
                     <span>Regresar</span>
                </a>
            </div>
        </form>
    </div>



</div>
