@model Proyecto_Gestion_TI.Models.Consulta
@{
	ViewBag.Titulo = "Crear nueva consulta";
}

<div class="row">

	<div class="col-md-8">

        @if (@ViewBag.Mensaje != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @ViewBag.Mensaje
            </div>
        }        

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TituloConsulta" class="control-label">Asunto de la consulta</label>
                <input asp-for="TituloConsulta" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DescripcionConsulta" class="control-label">Descripcion de la consulta</label>
                <textarea asp-for="DescripcionConsulta" class="form-control" rows="4"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear Consulta" class="btn btn-primary" />
                <a class="btn btn-info btn-small" asp-area="" asp-controller="Consulta" asp-action="Index">
                     <span>Regresar</span>
                </a>
            </div>

        </form>
    </div>



</div>
